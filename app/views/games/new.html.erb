<h1>NEW GAME</h1>

<ul>
<% @letters.each do |letter|%>
  <li><%= letter %></li>
<% end %>
</ul>

<form action="/score" class='input'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Word?">
  <input type="submit">
</form>
